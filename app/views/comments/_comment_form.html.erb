<%= render('layouts/errors', :object => @comment) %>

<%= form_for([@link, @comment]) do |f| %>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_field :text %>
  </div>

  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
