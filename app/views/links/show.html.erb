<div class="page-header">
  <h1>Link Details</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <div id="link_detail">
      <p>Description: <%=@link.description%></p>
      <p>URL: <%=@link.url%></p>
      <p>Rank: <%=@link.rank%></p>
      <p>Votes: <%=@link.votes%></p>
    </div>
    <%= link_to "Edit", edit_link_path(@link), :class => "btn-small btn-primary" %>
    <%= link_to "Delete", link_path(@link), :data => {:confirm => "Are you sure?", :method => "delete"}, :class => "btn-small btn-danger" %>
  </div>

  <div class="col-md-6">
    <h3> Comments </h3>
      <ul>
      <% @link.comments.each do |comment| %>
        <li><%= link_to "#{comment.text}", edit_link_comment_path(@link, comment) %> </li>
      <% end %>
    </ul>
  </div>
</div>

<div id="comment">
  <br>
    <%=render 'comments/comment_form'%>
  </div>
